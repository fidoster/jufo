{
  "name": "JUFO Quick Check",
  "version": "1.1.0",
  "manifest_version": 3,
  "description": "A Chrome extension to quickly check and display JUFO levels for journals using selected text or manual input.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "JUFO Quick Check"
  },
  "icons": {
    "32": "assets/icon-32.png",
    "72": "assets/icon-72.png",
    "128": "assets/icon-128.png",
    "512": "assets/icon-512.png"
  }
}
